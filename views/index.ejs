<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="../bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"/>
    <style>
        body{
            background-image: url(../img/bg4.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            background-size: 100%;
           
        }
        table{
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0, 0.4); /* Black w/opacity/see-through */
            color: rgb(255, 255, 255);
            font-weight: bold;
            border-radius: 20px; 
            top: 50%;
            left: 50%;          
            z-index: 2;
            width: 50%;
            padding: 5px;
            text-align: center;
            box-shadow: 0px 2px 15px 3px rgba(244,236,236,0.85);-webkit-box-shadow: 0px 2px 15px 3px rgba(244,236,236,0.85);-moz-box-shadow: 0px 2px 15px 3px rgba(244,236,236,0.85);
        }
        form {
            border-radius: 17px;
        }
        input,select,textarea{
            border-radius: 8px;
            background-color: rgb(249, 243, 243); /* Fallback color */
            background-color: rgba(218, 205, 205, 0.4); /* Black w/opacity/see-through */
            color: white;
        }
        td{
             padding-top: 10px;
              text-shadow: 1px 1px 2px red, 0 0 1em rgb(58, 58, 173), 0 0 0.2em rgb(246, 246, 249);
        }
        .ud{
            color: bisque;
        }
        button{
            background-color:#32da70;
        }
        h2{
            text-shadow: 1px 1px 2px red, 0 0 1em rgb(58, 58, 173), 0 0 0.2em rgb(246, 246, 249);
        }
        .city{
            background-color: rgb(249, 243, 243); /* Fallback color */
            background-color: rgba(218, 205, 205, 0.4);
        }
    </style>

</head>

<body>
    <caption >
        <h2 align="center" class="mt-5">-- BOOK RECORD --</h2>
    </caption>
    <form action="/insertData" method="post" class="">
        <table align="center"  class="">
            <tr>
                <td>Titel</td>
                <td><input type="text" name="title" id=""></td>
            </tr>
            <tr>
                <td>Author</td>
                <td><input type="text" name="author" id=""></td>
            </tr>
            <tr>
                <td>City</td>
                <td>
                    <select name="city" id="" class="text-black bg-light">
                        <option disabled selected>--Select City--</option>
                        <% let city=['Surat','Pune','Vadodra','Bharuch'] ;
                        city.map((val,index)=>{
                            %>
                            <option value="<%= val %>">
                                <%= val %>
                            </option>
                            <% })%>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Price</td>
                <td><input type="number" name="price" id=""></td>
            </tr>
            <tr>
                <td>Pages</td>
                <td><input type="radio" name="pages" value="50-100" id=""> 50-100
                    <input type="radio" name="pages" value="100-200" id=""> 100-200
                    <input type="radio" name="pages" value="300-400" id=""> 300-400
                </td>
            </tr>
            <tr>
                <td>Description</td>
                <td><textarea name="description" id=""></textarea></td>
            </tr>
            <tr>
                <td>Language</td>
                <td><input type="radio" name="language" id="" value="hindi"> Hindi
                    <input type="radio" name="language" id="" value="english"> English
                    <input type="radio" name="language" id="" value="gujrati"> Gujrati
                </td>

            </tr>
            <tr>
                <td></td>
                <td><button type="submit" value="Add Data" class="rounded-2 text-dark mb-3">Add Data</button></td>
            </tr>
        </table>
    </form>

    <caption >
        <h2 align="center" border="1" class="mt-5">-- USER DATA --</h2>
    </caption>

    <table align="center" class="mt-3">
        <tr class="ud">
            <td>Title</td>
            <td>Author</td>
            <td>City</td>
            <td>Price</td>
            <td>Pages</td>
            <td>Description</td>
            <td>Language</td>
            <td>Delete</td>
            <td>Edit</td>
        </tr>

        <% data.map((val,idx)=>{ %>
            <tr>
                <td>
                    <%= val.title %>
                </td>
                <td>
                    <%= val.author %>
                </td>
                <td>
                    <%= val.city %>
                </td>
                <td>
                    <%= val.price %>
                </td>
                <td>
                    <%= val.pages %>
                </td>
                <td>
                    <%= val.description %>
                </td>
                <td>
                    <%= val.language %>
                </td>
                <td>
                    <a href="/deleteData/<%= val.id %>"><i class="fa-solid fa-trash-can fa-lg" style="color: #d1bbbe;"></i></a>
                </td>
                <td>
                    <a href="/editData/<%= val.id %>"><i class="fa-regular fa-pen-to-square fa-lg" style="color: #32da70;"></i></a> 
                </td>
            </tr>

            <% }) %>
    </table>

</body>

</html>